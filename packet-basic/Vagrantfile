Vagrant.configure("2") do |config|
  config.vm.box = "debian/bullseye64"

  # https://www.elite.uk.com/mike/posts/AX25_over_Ethernet/

  def provision(callsign)
    <<-END
    apt-update
    apt-get install --yes ax25-tools ax25-apps kmod
    modprobe netrom
    modprobe bpqether

    echo """
    auto bpq0
    iface bpq0 inet manual
      up bpqparms bpq0 -d broadcast
      up axparms --setcall bpq0 #{callsign}
      up ip link set dev bpq0 up
      down ip link set dev bpq0 down
    """ > /etc/network/interfaces.d/bpq0

    echo "bpq0 #{callsign} 1000000000 255 7 BPQETHER for eth0" > /etc/ax25/axports

    echo "netrom #{callsign} NCALL 236 Linux Switch Port" > /etc/ax25/nrports

    # TODO Figure out tnc replacement - bpq0?
    echo "bpq0 5   203 129 1" > /etc/ax25/nrbroadcast

    # TODO Figure out some idempotence
    ifup bpq0

    # TODO Figure out some idempotence
    nrattach netrom

    # netromd -i
    # nodesave
    END
  end

  config.vm.define "primus" do |primus|
    primus.vm.hostname = "primus"
    primus.vm.provision "shell", inline: provision("MYCALL-1")
  end

  config.vm.define "secundus" do |secundus|
    secundus.vm.hostname = "secundus"
    secundus.vm.provision "shell", inline: provision("MYCALL-2")
  end
end
